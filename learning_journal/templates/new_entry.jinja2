{% extends "layout.jinja2" %}
{% block main %}
<main class="container">
    <div class="form-group">
        <form action="{{ request.route_url('create') }}" method="POST">
        <label for="Title">Title:</label>
        <input class="form-control" rows="5" id="Title" type="text" name="title"></input>
        <label for="Entry">Entry:</label>
        <textarea class="form-control" rows="5" id="Entry" type="text" name="body"></textarea>
        <label for="creation_date">Creation Date:</label>
        <input class="form-control" rows="5" id="creation_date" type="text" name="creation_date"></input>
        <input type="submit" value="Submit"/>
        </form>
    </div>
      {# <button type="button" class="btn btn-primary">Save New Entry</button> #}
      <a href="/"><button type="button" class="btn btn-default">Cancel</button></a>

</main>
{% endblock %}